{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],

    "baseUrl": "src",
    "paths": {
      "@shelf/*": ["app/*"],
      "@shelf-core/*": ["app/core/*"],
      "@shelf-shared/*": ["app/shared/*"],
      "@shelf-users/*": ["app/users/*"],
      "@shelf-books/*": ["app/books/*"]
    }
  }
}
